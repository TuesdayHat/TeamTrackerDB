{{#partial "content"}}
    <p>Add New Team</p>
    <form action="/teams" method="POST">
        <label for="name">Team Name</label>
        <input id="name" name="name" type="text"><br>

        <label for="members">Members</label>
        <input id="members" name="members" type="text"><br>

        <label for="desc">Team Description</label>
        <textarea id="desc" name="desc"></textarea>><br>
        <p>Note: Description MUST include Target Date and at least one Target Object</p>


        <button type="submit" class="btn btn-default">Add Team</button>
    </form>
{{/partial}}

{{> layout.hbs}}